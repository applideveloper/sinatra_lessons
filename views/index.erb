<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="UTF-8">
	<title>BBS</title>
</head>
<body>
	<h1>BBS</h1>
	<ul>
		<% @comments.each do |comment| %>
			<li data-id="<%= comment.id %>">
				<%= h comment.body %>
				<span class="deleteCmd" style="cursor:pointer;color:blue">[Ã—]</span>
			</li>
		<% end %>
		<h2>Add New</h2>
		<form method="post" action="/new">
			<input type="text" name="body"><input type="submit" value="post!">
		</form>
	</ul>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script>
		$('.deleteCmd').click(function() {
			var el = $(this).parent();
			if (confirm('Are you sure to delete?')) {
				$.post('/delete', {
					id: el.data('id')
				}, function() {
					el.fadeOut(800);
				});
			}
		});
	</script>
</body>
</html>
